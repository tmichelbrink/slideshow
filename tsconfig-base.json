{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es5",
    "lib": [
      "ES2015"
    ]
  },
  "exclude": [
    "dist"
  ]
}
